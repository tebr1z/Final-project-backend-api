@model LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login | Edmate Learning</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <!-- Main CSS -->
    <link rel="stylesheet" href="~/assets/css/main.css">
    <style>
        .valid-feedback {
            color: #28a745;
            display: none;
        }

        .invalid-feedback {
            color: #dc3545;
            display: none;
        }

        #backendErrors {
            display: none;
            color: #dc3545;
            font-weight: bold;
            background-color: #f8d7da;
            padding: 10px;
            border-radius: 5px;
            margin-top: 15px;
        }
    </style>
</head>

<body>
    <section class="auth d-flex">
        <div class="auth-left bg-main-50 flex-center p-24">
            <img src="~/assets/images/thumbs/auth-img1.png" alt="Login">
        </div>
        <div class="auth-right py-40 px-24 flex-center flex-column">
            <div class="auth-right__inner mx-auto w-100">
                <a href="/" class="auth-right__logo">
                    <img src="~/assets/images/logo/logo.png" alt="Logo">
                </a>
                <h2 class="mb-8">Welcome Back! 👋</h2>
                <p class="text-gray-600 text-15 mb-32">Please sign in to your account and start the adventure</p>

                <!-- Backend Hata Mesajları -->
                <div id="backendErrors" class="alert alert-danger" asp-validation-summary="All"></div>

                <form asp-action="Login" method="post" id="loginForm" novalidate>
                    <div class="mb-24">
                        <label class="form-label">Email or Username</label>
                        <div class="position-relative">
                            <input asp-for="UserName" type="text" class="form-control py-11 ps-40 required-field" placeholder="Type your username or email" required>
                            <span class="position-absolute top-50 translate-middle-y ms-16 text-gray-600 d-flex"><i class="ph ph-user"></i></span>
                        </div>
                        <span asp-validation-for="UserName" class="invalid-feedback">This field is required.</span>
                    </div>

                    <div class="mb-24">
                        <label class="form-label">Password</label>
                        <div class="position-relative">
                            <input asp-for="Password" type="password" class="form-control py-11 ps-40 required-field" placeholder="Enter your password" required>
                            <span class="position-absolute top-50 translate-middle-y ms-16 text-gray-600 d-flex"><i class="ph ph-lock"></i></span>
                        </div>
                        <span asp-validation-for="Password" class="invalid-feedback">This field is required.</span>
                    </div>

                    <div class="mb-32 flex-between flex-wrap gap-8">
                        <div class="form-check mb-0 flex-shrink-0">
                            <input class="form-check-input flex-shrink-0 rounded-4" type="checkbox" value="" id="remember">
                            <label class="form-check-label text-15 flex-grow-1" for="remember">Remember Me</label>
                        </div>
                        <a href="forgot-password.html" class="text-main-600 hover-text-decoration-underline text-15 fw-medium">Forgot Password?</a>
                    </div>

                    <button type="submit" id="submitBtn" class="btn btn-main rounded-pill w-100">Sign In</button>

                    <p class="mt-32 text-gray-600 text-center">
                        New on our platform?
                        <a href="sign-up.html" class="text-main-600 hover-text-decoration-underline">Create an account</a>
                    </p>
                </form>
            </div>
        </div>
    </section>

    <!-- Scripts -->
    <script src="~/assets/js/jquery-3.7.1.min.js"></script>
    <script src="~/assets/js/boostrap.bundle.min.js"></script>
</body>
</html>
